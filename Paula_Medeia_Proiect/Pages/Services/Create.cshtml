@page
@model Paula_Medeia_Proiect.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Create Service";
}

<h1>Create Service</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label">Service Name</label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Description" class="control-label">Description</label>
                <textarea asp-for="Service.Description" class="form-control"></textarea>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Price" class="control-label">Price</label>
                <input asp-for="Service.Price" class="form-control" step="0.01" />
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.ServiceDate" class="control-label">Service Date</label>
                <input asp-for="Service.ServiceDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="Service.ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.SalonBranchID" class="control-label">Salon Branch</label>
                <select asp-for="Service.SalonBranchID" class="form-control" asp-items="ViewBag.SalonBranchID"></select>
                <span asp-validation-for="Service.SalonBranchID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.StylistID" class="control-label">Stylist</label>
                <select asp-for="Service.StylistID" class="form-control" asp-items="ViewBag.StylistID"></select>
                <span asp-validation-for="Service.StylistID" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
